# Documentation {{{
Include: _help.colortemplate
# }}}

# Global definitions - put at the top of the colorscheme {{{
QuickFixLine         ->  Search
StatusLineTerm       -> StatusLine
StatusLineTermNC     -> StatusLineNC
Boolean              -> Constant
Character            -> Constant
Conditional          -> Statement
Define               -> PreProc
Debug                -> Special
Delimiter            -> Special
Exception            -> Statement
Float                -> Constant
Function             -> Identifier
Include              -> PreProc
Keyword              -> Statement
Label                -> Statement
Macro                -> PreProc
Number               -> Constant
Operator             -> Statement
PreCondit            -> PreProc
Repeat               -> Statement
SpecialChar          -> Special
SpecialComment       -> Special
StorageClass         -> Type
String               -> Constant
Structure            -> Type
Tag                  -> Special
Typedef              -> Type
# See `:help lCursor`
lCursor              -> Cursor
# }}}

Background: dark

# Color palette for black variant {{{
# Color name                GUI                  Base256    Base16 (optional)
Color: bgcol                #181818                ~        Black
Color: fgcol                #b9b9b9                ~
Color: black                #252525                ~        DarkGrey
Color: red                  #ed4a46                ~        DarkRed
Color: green                #70b433                ~        DarkGreen
Color: yellow               #dbb32d                ~        DarkYellow
Color: blue                 #368aeb                ~        DarkBlue
Color: magenta              #eb6eb7                ~        DarkMagenta
Color: cyan                 #3fc5b7                ~        DarkCyan
Color: orange               #e67f43                ~
Color: violet               #a580e2                ~
Color: white                #777777                ~        LightGrey
Color: brightblack          #3b3b3b                ~        DarkGrey
Color: brightred            #ff5e56                ~        LightRed
Color: brightgreen          #83c746                ~        LightGreen
Color: brightyellow         #efc541                ~        LightYellow
Color: brightblue           #4f9cfe                ~        LightBlue
Color: brightmagenta        #ff81ca                ~        LightMagenta
Color: brightcyan           #56d8c9                ~        LightCyan
Color: brightorange         #fa9153                ~
Color: brightviolet         #b891f5                ~
Color: brightwhite          #dedede                ~        White
# }}}

# Terminal colors for black variant {{{
Term colors: black red green yellow blue magenta cyan white
Term colors: brightblack brightred brightgreen brightyellow
Term colors: brightblue brightmagenta brightcyan brightwhite
# }}}

# Definitions common to all variants {{{
Variant: gui
#if get(g:, '@optionprefix_transp_bg', 0) && !has('gui_running')
Variant: 256 8
#if get(g:, '@optionprefix_transp_bg', 0)
Variant: gui 256 8
    Normal           white             none
    Terminal         white             none
#else
    Normal           white             black
    Terminal         white             black
#endif

