Color: orange               #ed8649                ~
Color: violet               #af88eb                ~
Color: white                #72898f                ~        LightGrey
Color: brightblack          #2d5b69                ~        DarkGrey
Color: brightred            #ff665c                ~        LightRed
Color: brightgreen          #84c747                ~        LightGreen
Color: brightyellow         #ebc13d                ~        LightYellow
Color: brightblue           #58a3ff                ~        LightBlue
Color: brightmagenta        #ff84cd                ~        LightMagenta
Color: brightcyan           #53d6c7                ~        LightCyan
Color: brightorange         #fd9456                ~
Color: brightviolet         #bd96fa                ~
Color: brightwhite          #cad8d9                ~        White
# }}}

# Terminal colors for dark variant {{{
Term colors: black red green yellow blue magenta cyan white
Term colors: brightblack brightred brightgreen brightyellow
Term colors: brightblue brightmagenta brightcyan brightwhite
# }}}

# Definitions common to all variants {{{
Variant: gui
#if get(g:, '@optionprefix_transp_bg', 0) && !has('gui_running')
Variant: 256 8
#if get(g:, '@optionprefix_transp_bg', 0)
Variant: gui 256 8
    Normal           fgcol             none
    Terminal         bgcol             none
#else
    Normal           fgcol             none
    Terminal         black             none
#endif

